/*
** an example of mutual recursion
*/

let
  val
  rec isevn =
  // rec isevn: int -> bool =
    lam (n) => if n >= 1 then isodd (n-1) else true
    // lam (n: int) => if n >= 1 then isodd (n-1) else true
  and isodd =
  // and isodd: int -> bool =
    lam (n) => if n >= 1 then isevn (n-1) else false
    // lam (n: int) => if n >= 1 then isevn (n-1) else false
  // end of [val]
in
  isevn (10)
end // end of [let]

